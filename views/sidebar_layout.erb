<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :"partial/head" %>
    <link href="/feed" rel="alternate" title="Primary Feed" type="application/atom+xml" />
  </head>
  <body>
    <%= erb :"partial/navbar" %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <div class="page-header">
            <h2><%= Blog.title %></h2><p><%= Blog.subtitle %></p>
          </div>
          <div class="row-fluid">
            <div class="span9 content">
              <%= yield %>
              <%= erb :"partial/disqus_num_replies" %>
              <%= paginate(posts) %>
            </div>
            <div class="span3">
              <div class="well">
                <a href="/archive">Archive</a>
                <ul>
                <% dates.each do |key, value| %>
                  <li><a href="/<%= key %>"><%= value %></a></li>
                <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <hr />
    </div>
    <%= erb :"partial/footer" %>
  </body>
</html>
